<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Virtual Study Group - Add User Admin </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"
        integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
        integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link rel="stylesheet" href="css/adminAddUser.css">
    <link rel="stylesheet" href="icomoon\style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <%- include('partials/navbar') %>
        <div class="container">
            <%- include('partials/sidenav') %>
        <div class="content">
            <div class="mainContainer">
                <header>
                    Add User
                </header>
                <form action="/admin-store-new-user-data" method="post" enctype="multipart/form-data">

                    <div class="avatarContainer">

                        <img src="../Images/u1.png" alt="img" id="userImg">
                        <input type="file" name="userPic" class="d-none" id="inputFile">
                        <i class="fa fa-camera upload-btn" aria-hidden="true" id="camera"></i>
                    </div>
                    <div class="sixFieldWrapper">
                        <div class="sixFieldContainer">
                            <input type="text" placeholder="First Name" name="firstName">
                            <input type="text" placeholder="Last Name" name="lastName">
                        </div>
                        <div class="sixFieldContainer">
                            <input type="text" placeholder="Username" name="username">
                            <input type="password" placeholder="Password" name="password">
                        </div>
                        <div class="sixFieldContainer">
                            <input type="email" placeholder="Email" name="mail">
                            <input type="email" placeholder="Recovery Mail" name="rMail">
                        </div>
                    </div>
                    <div class="fields">
                        <div class="education">
                            <label for="education"> Education: </label>
                            <select name="education">
    
                                <!-- TO BE CHANGED THIS FIELDS -->
                                <option value="Not Selected">--Select--</option>
                                <option value="Under Graduate">Under Graduate</option>
                                <option value="Post Graduate">Post Graduate</option>
                                <option value="Graduate">Graduate</option>
                                <option value="High School">High School</option>
                            </select>
                        </div>
                        <div class="interestedFields">
                            <label for="Interested Fields"> Intrested Fields: </label>
                            <div class="checkboxContainer">
                                <div class="divRow">
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Engineering">
                                        <label for="interestedFields[]">Engineering</label>
                                    </div>
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Architechture">
                                        <label for="interestedFields[]">Architechture</label>
                                    </div>
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Enviromental Studies">
                                        <label for="interestedFields[]">Enviromental Studies</label>
                                    </div>
                                </div>
                                <div class="divRow">
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Law">
                                        <label for="interestedFields[]">Law</label>
                                    </div>
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Chemistry">
                                        <label for="interestedFields[]">Chemistry</label>
                                    </div>
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Social Science">
                                        <label for="interestedFields[]">Social Science</label>
                                    </div>
                                </div>
                                <div class="divRow">
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Computer Science">
                                        <label for="interestedFields[]">Computer Science</label>
                                    </div>
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Arts and Cultures">
                                        <label for="interestedFields[]">Arts and Cultures</label>
                                    </div>
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Science">
                                        <label for="interestedFields[]">Science</label>
                                    </div>
                                </div>
                                <div class="divRow">
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Design">
                                        <label for="interestedFields[]">Design</label>
                                    </div>
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Physics">
                                        <label for="interestedFields[]">Physics</label>
                                    </div>
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Pharmacy">
                                        <label for="interestedFields[]">Pharmacy</label>
                                    </div>
                                </div>
                                <div class="divRow">
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Biology">
                                        <label for="interestedFields[]">Biology</label>
                                    </div>
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Mathematics">
                                        <label for="interestedFields[]">Mathematics</label>
                                    </div>
                                    <div class="checkLabel">
                                        <input type="checkbox" name="interestedFields[]" value="Astronomy">
                                        <label for="interestedFields[]">Astronomy</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="btnSubmit">
                        <input type="submit" value="Add">
                    </div>
                </form>
            </div>
        </div>
        <script>
            //sidenav click
            const sideBar = document.querySelector('.sideNav');

            //Hamburger
            const nav = document.querySelector('.navbar');
            nav.addEventListener('click', () => {
                nav.classList.toggle('active');
                sideBar.classList.toggle('sideRes');
            })

            //CAMERA
            const icon = document.getElementById('camera');
            const userImg = document.getElementById('userImg');
            const file = document.getElementById('inputFile');

            var readUrl = function (input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        userImg.setAttribute('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
            file.addEventListener('change', function () {
                // console.log("Changed");
                readUrl(this);
            })
            icon.addEventListener('click', function () {
                file.click();
            })
            // console.log(icon);
            console.log(userImg);
        </script>
</body>

</html>